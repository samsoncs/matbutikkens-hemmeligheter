---
import BaseLayout from "../layouts/BaseLayout.astro";
import EpisodeCard from "../lib/common/episodes/EpisodeCard.astro";
import { Image } from "astro:assets";
import purnille from "../assets/purnille.png";
import brobert from "../assets/brobert.png";
import Link from "../lib/common/Link.astro";
import Card from "../lib/common/Card.astro";
import {
  getAllEpisodes,
  isEpisodePublished,
  getAllSeasons,
} from "../lib/common/episodes/episodes";
import PodcastBadges from "@lib/common/podcast-badges/PodcastBadges.astro";
import ChevronRightIcon from "@lib/common/icons/ChevronRightIcon.astro";

const episodes = getAllEpisodes();
const seasons = getAllSeasons();
const lastSeason = Math.max(...seasons);

const publishedEpisodes = episodes.filter((e) => isEpisodePublished(e));
const upcomingEpisodes = episodes.filter((e) => !isEpisodePublished(e));
const allEpisodes = [...publishedEpisodes, ...upcomingEpisodes];
const previewEpisodes = allEpisodes.slice(0, 3);
const firstTwoEpisodes = previewEpisodes.slice(0, 2);
const thirdEpisode = previewEpisodes[2];
---

<BaseLayout
  title="Matbutikkens Hemmeligheter – Barnepodkast for barn 3–7 år"
  description=" Gratis barnepodkast for barn 3–7 år om matglede, vennskap og fantasi – uten reklame."
  image={brobert}
  noMaxWidth
>
  <div class="px-2 md:px-4 flex flex-col gap-8 md:gap-12 pb-8">
    <section
      class="max-w-6xl mx-auto relative overflow-hidden bg-gradient-to-br from-emerald-100 via-emerald-50/40 to-teal-100/40 rounded-4xl shadow-xl shadow-emerald-800/5"
    >
      <div class="px-8 md:px-12 py-16 md:py-24 flex flex-col gap-6 md:gap-12">
        <div class="w-9/12 xs:w-10/12 sm:w-3/4 md:w-7/12">
          <h1 class="text-4xl/9 md:text-5xl/12 font-extrabold mb-6">
            <span
              class="bg-clip-text text-transparent bg-pink-600 bg-gradient-to-r from-pink-600 to-pink-600"
            >
              Matbutikkens
            </span>
            <span
              class="bg-clip-text text-transparent bg-emerald-600 bg-gradient-to-r from-emerald-600 via-teal-600 to-cyan-600"
            >
              Hemmeligheter</span
            >
          </h1>
          <p class="text-lg font-semibold text-emerald-950/80 mb-4">
            Matbutikkens Hemmeligheter er en spennende og lærerik podkast for
            barn i <span class="font-bold"> alderen 3-7 år. </span> Hver episode
            byr på fantasifulle historier om matvarer som får personlighet og egne
            små eventyr.
          </p>
        </div>
        <div class="relative z-10">
          <div class="flex">
            <Link href={`episodes/season/${lastSeason}`}>
              <div
                class="flex gap-2 items-center z-10 bg-pink-600 font-bold text-white px-4 py-3 rounded-full hover:cursor-pointer hover:bg-emerald-800 transition active:translate-y-[1px] hover:shadow-lg hover:scale-[1.02]"
              >
                Siste episoder <ChevronRightIcon />
              </div>
            </Link>
          </div>
          <div class="mt-5">
            <PodcastBadges
              spotifyUrl="https://open.spotify.com/show/1zj6rrA8Nb3PaQkUAQft1f"
              appleUrl="https://podcasts.apple.com/us/podcast/matbutikkens-hemmeligheter/id1856799991"
            />
          </div>
        </div>
        <div
          class="hidden md:block pointer-events-none select-none absolute md:right-[-4%] sm:right-[-14%] right-[-34%] bottom-[-16%] rotate-6 md:rotate-3 origin-center"
        >
          <Image
            class="rounded-lg hidden md:block z-1"
            src={purnille}
            width={370}
            alt="Illustrasjon for podkasten Matbutikkens Hemmeligheter"
          />
        </div>
        <div
          class="pointer-events-none select-none absolute lg:right-[20%] md:right-[25%] right-[-10%] bottom-[-15%] md:bottom-[-16%] rotate-6 md:rotate-3 origin-center"
        >
          <Image
            class="rounded-lg hidden md:block z-1"
            src={brobert}
            width={300}
            alt="Illustrasjon for podkasten Matbutikkens Hemmeligheter"
          />
          <Image
            class="rounded-lg md:hidden block z-1"
            src={brobert}
            width={200}
            alt="Illustrasjon for podkasten Matbutikkens Hemmeligheter"
          />
        </div>

        <div
          class="pointer-events-none absolute inset-0 bg-[radial-gradient(circle_at_70%_30%,rgba(16,185,129,0.15),transparent_60%)]"
        >
        </div>
      </div>
    </section>

    <section class="max-w-3xl mx-auto">
      <h2 class="text-emerald-600 text-xl font-bold mb-4">Siste episoder</h2>

      <div class="mb-8">
        <div class="grid gap-8 auto-rows-max content-start">
          {
            firstTwoEpisodes.map((episode, i) => (
              <EpisodeCard isCurrent={false} episode={episode} />
            ))
          }
        </div>
        {
          thirdEpisode && (
            <div class="relative mt-8" aria-hidden="true" inert>
              <div
                class="overflow-hidden max-h-[250px] sm:max-h-[60px] [mask-image:linear-gradient(to_bottom,black_0%,transparent_100%)]
  [-webkit-mask-image:linear-gradient(to_bottom,black_0%,transparent_100%)]"
              >
                <EpisodeCard isCurrent={false} episode={thirdEpisode} />
              </div>
            </div>
          )
        }
      </div>
      <div class="flex justify-center">
        <Link
          href={`episodes/season/${lastSeason}`}
          class="bg-pink-600 font-bold text-white px-5 py-2 rounded-full shadow hover:bg-pink-600 transition"
        >
          Alle episoder
        </Link>
      </div>
    </section>
  </div>

  <div class="w-full leading-none -mb-px">
    <svg
      class="block w-full h-16 md:h-20"
      viewBox="0 0 1440 160"
      xmlns="http://www.w3.org/2000/svg"
      preserveAspectRatio="none"
    >
      <path
        d="M0 50 C 240 110 480 0 720 60 C 960 120 1200 40 1440 70 L1440 160 L0 160 Z"
        fill="#047857"></path>
    </svg>
  </div>

  <div class="bg-emerald-700 text-white py-8 pb-8 md:px-8">
    <section class="mx-auto max-w-5xl px-4 mb-8">
      <div class="grid md:grid-cols-5">
        <div class="md:col-span-2 -mt-10">
          <Image
            class="rounded-lg"
            src={brobert}
            widths={[150, 300]}
            sizes="(max-width: 768px) 150px, 300px"
            alt="Illustrasjon for podkasten Matbutikkens Hemmeligheter"
          />
        </div>
        <div class="md:col-span-3">
          <Card
            background="bg-emerald-900 bg-linear-to-t from-emerald-900 to-emerald-900/85"
          >
            <h2 class="text-xl md:text-2xl font-bold mb-4 text-rose-200">
              En magisk matbutikk!
            </h2>
            <p class="text-base/8">
              Matbutikkens Hemmeligheter er en spennende podkast for barn <span
                class="font-bold text-rose-200">3–7 år</span
              >. Her møter du Brokkolien Brobert, Purren Purnille og vennene
              deres i morsomme historier fylt med <span
                class="font-bold text-rose-200"
              >
                musikk, fantasi og latter.</span
              > Hver episode handler om <span class="font-bold text-rose-200">
                vennskap, samarbeid og matglede
              </span> – fortalt på en måte som får både barn og foreldre til å smile.
            </p>
            <div
              class="flex gap-2 flex-wrap mt-7 text-emerald-900 text-sm font-bold"
            >
              <div class="bg-emerald-200 rounded-full px-3 py-1">
                For barn 3-7 år
              </div>
              <div class="bg-emerald-200 rounded-full px-3 py-1">
                Gratis og uten annonser
              </div>
            </div>
          </Card>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
