---
import "../styles/global.css";
import "@fontsource/fredoka/700";
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  bgFrom: string;
  bgTo: string;
  accent: string;
  noMaxWidth?: boolean;
}

const { title, bgFrom, bgTo, accent, noMaxWidth = false } = Astro.props;

// We always use the same utility classes; custom colors flow through CSS vars.
const bodyGradientClasses =
  bgFrom && bgTo
    ? "bg-gradient-to-br from-[var(--bg-from)] to-[var(--bg-to)]"
    : "bg-gradient-to-br from-emerald-50 via-lime-50 to-rose-50";
---

<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <ClientRouter />
  </head>
  <body
    class={`text-emerald-950 antialiased ${bodyGradientClasses}`}
    data-bg-from={bgFrom}
    data-bg-to={bgTo}
    data-accent={accent}
    style={bgFrom && bgTo ? `--bg-from:${bgFrom};--bg-to:${bgTo};` : undefined}
  >
    <nav
      id="site-nav"
      class={`sticky top-0 z-20 text-[var(--accent)]  mb-2 transition-all duration-100 ease-in-out`}
    >
      <div class="flex items-center mx-auto max-w-6xl p-4 font-bold">
        <div class="flex-grow">
          <!-- TODO: Don't use H3 to change style, use tailwind class for font -->
          <h3 class="text-2xl">
            <a href={`${import.meta.env.BASE_URL}`}
              ><span
                class="bg-clip-text text-transparent bg-gradient-to-r from-rose-600 to-pink-600"
                >M</span
              ><span
                class="bg-clip-text text-transparent bg-gradient-to-r from-emerald-600 via-teal-600 to-cyan-600"
                >H</span
              ></a
            >
          </h3>
        </div>
        <div class="flex gap-4 md:gap-6">
          <a href={`${import.meta.env.BASE_URL}episodes`}>Episoder</a>
          <a href="#">Meny</a>
        </div>
      </div>
    </nav>
    <article
      class={`min-h-screen ${noMaxWidth ? "" : "px-2 md:px-4 mx-auto max-w-6xl "}`}
    >
      <slot />
    </article>
    <script is:inline>
      (function () {
        function applyVars() {
          const body = document.body;
          const from = body.dataset.bgFrom;
          const to = body.dataset.bgTo;
          const accent = body.dataset.accent;
          if (from && to && accent) {
            body.style.setProperty("--bg-from", from);
            body.style.setProperty("--bg-to", to);
            body.style.setProperty("--accent", accent);
          }
        }
        function updateScrolled() {
          const nav = document.getElementById("site-nav");
          if (nav) nav.classList.toggle("is-scrolled", window.scrollY > 0);
        }
        applyVars();
        updateScrolled();
        window.addEventListener("scroll", updateScrolled, { passive: true });
        document.addEventListener("astro:after-swap", () => {
          applyVars();
          updateScrolled();
        });
      })();
    </script>
  </body><footer class="bg-emerald-900 text-white py-8 px-8">
    <section
      class="flex flex-col items-center justify-center mx-auto max-w-6xl px-2 md:px-4 mb-8"
    >
      <p>Coppyright Â© 2025 Matbutikkens Hemmeligheter.</p>
    </section>
  </footer>
</html>
