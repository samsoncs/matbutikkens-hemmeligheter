---
import { Image } from "astro:assets";

interface Props {
  name: string;
  published: string;
  length: string;
  image: ImageMetadata;
  description: string;
  id: string;
}

const { name, published, length, image, description, id } = Astro.props;
---

<div
  class="overflow-hidden bg-emerald-100/80 rounded-4xl shadow-xl shadow-emerald-800/5
            flex flex-col sm:grid sm:grid-cols-12"
>
  <div
    class="sm:col-span-4 sm:col-start-9 md:col-span-3 md:col-start-10 flex justify-center"
  >
    <Image
      class="inset-0 w-full h-40 sm:h-60 object-cover"
      src={image}
      width={300}
      height={300}
      alt={`Illustrasjon for episoden ${name}`}
    />
  </div>

  <div
    class="p-6 sm:py-6 sm:px-8 sm:col-span-8 md:col-span-9 sm:col-start-1 sm:row-start-1 xl:pr-12"
  >
    <h3 class="text-xl font-bold mb-2 text-emerald-800">
      {name}
    </h3>
    <div class="text-emerald-800 mb-1">
      <span class="font-bold">Varighet:</span>
      {length} • <span class="font-bold">Utgitt:</span>
      {published}
    </div>
    <p class="text-base leading-5 mb-4">
      {description}
    </p>
    <div>
      <a
        href={`${import.meta.env.BASE_URL}episodes/${id}`}
        class="bg-emerald-700 font-semibold text-white px-4 py-2 rounded-full"
      >
        Hør nå
      </a>
    </div>
  </div>
</div>
