---
import "../styles/global.css";
import "@fontsource/fredoka/500";
import openSansWoff2 from "@fontsource-variable/open-sans/files/open-sans-latin-wght-normal.woff2?url";
import { ClientRouter } from "astro:transitions";
import Navbar from "./_components/Navbar.astro";

interface Props {
  title: string;
  description?: string;
  bgFrom?: string;
  bgTo?: string;
  accent?: string;
  noMaxWidth?: boolean;
  image?: ImageMetadata;
}

const {
  title,
  description = "Matbutikkens Hemmeligheter er en spennende og lærerik podkast for barn fra 3-7 år, med fokus på matglede, vennskap og samarbeid. Med masse humor, fantasi, fengende musikk og lydefekter.",
  bgFrom = "oklch(98.6% 0.031 120.757)",
  bgTo = "oklch(96.9% 0.015 12.422)",
  accent = "oklch(50.8% 0.118 165.612)",
  noMaxWidth = false,
  image,
} = Astro.props;

const SITE = {
  url: "https://brobert.no",
  name: "Matbutikkens Hemmeligheter",
  author: "Matbutikkens Hemmeligheter",
  logo: "https://brobert.no/logo.png",
};

const pathname = Astro.url.pathname;
const canonicalUrl =
  pathname === "/"
    ? SITE.url + "/" // keep single trailing slash on root
    : SITE.url + pathname.replace(/\/+$/, ""); // strip all trailing slashes

const ogImageUrl: string | undefined = image ? SITE.url + image.src : undefined;

const brand = "Matbutikkens Hemmeligheter";
const brandedTitle = title.toLowerCase().includes(brand.toLowerCase())
  ? title
  : `${title} | ${brand}`;

const bodyGradientClasses =
  bgFrom && bgTo
    ? "bg-[var(--bg-from)] bg-gradient-to-br from-[var(--bg-from)] to-[var(--bg-to)]"
    : "bg-emerald-50 -gradient-to-br from-emerald-50 via-lime-50 to-rose-50";
---

<html lang="no">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{brandedTitle}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#FFFEFB" />
    <meta name="author" content={SITE.author} />
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="nb_NO" />
    <meta property="og:site_name" content={SITE.name} />
    <meta property="og:title" content={brandedTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    {ogImageUrl && <meta property="og:image" content={ogImageUrl} />}
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={brandedTitle} />
    <meta name="twitter:description" content={description} />
    {ogImageUrl && <meta name="twitter:image" content={ogImageUrl} />}
    <link
      rel="preload"
      href="/fonts/fredoka-latin-500-normal.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />

    <ClientRouter />
  </head>
  <body
    class={`text-emerald-950 antialiased ${bodyGradientClasses}`}
    data-bg-from={bgFrom}
    data-bg-to={bgTo}
    data-accent={accent}
    style={bgFrom && bgTo ? `--bg-from:${bgFrom};--bg-to:${bgTo};` : undefined}
  >
    <Navbar />
    <main id="main-content">
      <article
        class={`pb-6 ${noMaxWidth ? "" : "px-2 md:px-4 mx-auto max-w-6xl "}`}
      >
        <slot />
      </article>
    </main>
    <footer class="bg-emerald-900 text-white py-8 px-8">
      <section
        class="flex flex-col items-center justify-center mx-auto max-w-6xl px-2 md:px-4 mb-8"
      >
        <p>Copyright © 2025 Matbutikkens Hemmeligheter.</p>
      </section>
    </footer>
    <script is:inline>
      (function () {
        function applyVars() {
          const body = document.body;
          const from = body.dataset.bgFrom;
          const to = body.dataset.bgTo;
          const accent = body.dataset.accent;
          if (from && to && accent) {
            body.style.setProperty("--bg-from", from);
            body.style.setProperty("--bg-to", to);
            body.style.setProperty("--accent", accent);
          }
        }
        function updateScrolled() {
          const nav = document.getElementById("site-nav");
          if (nav) nav.classList.toggle("is-scrolled", window.scrollY > 0);
        }
        applyVars();
        updateScrolled();
        window.addEventListener("scroll", updateScrolled, { passive: true });
        document.addEventListener("astro:after-swap", () => {
          applyVars();
          updateScrolled();
        });
      })();
    </script>
  </body>
</html>
